{
  "extends": ["tslint-config-airbnb"],
  "rules": {
    "interface-name": [true, "always-prefix"],
    "max-line-length": [true, 140],
    "semicolon": [true, "never"],
    "trailing-comma": false,
    "variable-name": [true, "check-format", "allow-pascal-case", "allow-leading-underscore"]
  },
  "env": {
    "jest": true
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  }
}